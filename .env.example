# .env.example
# This file serves as a template for the actual .env file
# Copy this file to .env and fill in the actual values

# Server
PORT=3000
NODE_ENV=development

# Database
DB_URI=mongodb://localhost:27017/secure-clipboard

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Encryption key for password storage (32 bytes hex encoded)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# Password generation settings
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=32

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Clipboard clear timeout (in milliseconds)
CLIPBOARD_CLEAR_TIMEOUT=10000